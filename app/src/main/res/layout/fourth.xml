<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/fourth_ll"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/forth_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dip"
        android:textSize="13sp"/>
    <LinearLayout
        android:id="@+id/fourth_ll2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fourth_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/touxiang" />

        <LinearLayout
            android:id="@+id/fourth_ll3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

        <TextView
            android:id="@+id/forth_tv2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="18sp"
            android:textColor="#b8ff69b4"
            />
        <TextView
            android:id="@+id/forth_tv3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textColor="#b8ff69b4"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>